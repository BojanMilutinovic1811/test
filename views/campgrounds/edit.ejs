<% include ../partials/header.ejs %>


    <div class="row mt-5">
        <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" class="col-md-6 mx-auto">
            <h3>Update <%= campground.location %></h3>
                <div class="form-group mt-3">
                        <label for="location">Site Location</label>
                        <input type="text" value='<%= campground.location %>' id='location'class="form-control" name="campground[location]" placeholder="Enter site location...">
                </div>
                <div class="form-group">
                        <label for="image">Site image</label>
                        <input type="text" value='<%= campground.image %>' id='image' class="form-control" name="campground[image]" placeholder="Enter image url...">
                </div>
                <div class="form-group">
                        <label for="Description">Description:</label>
                        <textarea class="form-control" rows="6" name='campground[description]' id="Description"><%= campground.description %></textarea>
                </div>
            
                <input type="submit" class="btn btn-block btn-success" value="Submit">
            
    </div>
    </form>
</div>


<% include ../partials/footer.ejs %>