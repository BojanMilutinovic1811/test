<% include ../partials/header.ejs %>


    <div class="row mt-5">

            <form action="/campgrounds/<%= campground.id %>/comments" method="post" class="col-md-6 p-5 mx-auto">
                <h4 class="mb-4">Add comment to <%= campground.location %> camp</h4>
                <div class="form-group">
                        <label for="commentText">Description:</label>
                        <textarea class="form-control" name='comment[text]' id="commentText"></textarea>
                </div>
                <div class="row mt-3 justify-content-around">
                        <input type="submit" class="btn btn-sm btn-success col-md-3" value="Submit">
                        <a href='/campgrounds/<%= campground.id %>' class=" col-md-3 btn btn-sm btn-danger">Cancel</a>
                </div>
            
    </div>
    </form>
</div>


